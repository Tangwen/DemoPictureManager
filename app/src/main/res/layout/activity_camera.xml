<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_make_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"

        android:text="@string/make_pic"
        tools:context=".CramaActivity" />

    <Button
        android:id="@+id/btn_get_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/btn_make_pic"
        android:text="@string/get_pic"
        tools:context=".CramaActivity" />

    <ImageView
        android:id="@+id/img_creama"
        android:layout_width="150dip"
        android:layout_height="150dip"
        android:layout_margin="15dip"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/btn_get_pic"
        android:scaleType="fitXY"
        />
        <!--android:background="@drawable/bg_img_coner"-->
    <TextView
        android:id="@+id/display_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_creama"
        android:textSize="16sp"
        android:background="#22000000"

        />

</RelativeLayout>